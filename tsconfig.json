{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./src/**/*"
  ],
  "baseUrl": ".",
  "paths": {
    "midgard/*": ["src/midgard/*"],
    "environment": ["environment.js"]
  },
  "exclude": ["node_modules"],
  "typedocOptions": {
    "hideGenerator": true,
    "ignoreCompilerErrors": true,
    "out": "./docs"
  }
}
